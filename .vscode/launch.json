  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "name": "API",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/api/server.js",
      "restart": true
    }
  ],
  "env": {
    "name": "NODE_TLS_REJECT_UNAUTHORIZED",
    "value": "1"
  }
}
